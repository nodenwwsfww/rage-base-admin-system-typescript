{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": ["esnext"],
        "sourceMap": false
    },
    "include": [
        "**/*"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}